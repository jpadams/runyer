module MCollective
  module Agent
    class <%= @action_name.capitalize %><RPC::Agent
      activate_when do
        <%= @activate_condition %>
      end

      action "run" do
        command = '<%= (@cmd_prefix+' '+@command).strip %>'
        reply[:status] = run(command,:stdout=>:out,:stderr=>:err,:chomp=>true)
      end
    end
  end
end
